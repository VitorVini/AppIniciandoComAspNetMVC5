@model IEnumerable<AppMvc.Models.Aluno>

@{
    ViewBag.Title = "Gestão de Alunos";
}

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success alert-dismissible fade show position-relative">
        <button type="button" class="btn-close position-absolute" data-bs-dismiss="alert" aria-label="Close" style="top: 0; right: 0;"></button>
        <h3>@TempData["Mensagem"].ToString()</h3>  <!--Converter pois TempData pode ser objeto ou string-->
    </div>
}

<h2>Gestão de Alunos</h2>

<a href="@Url.Action("Create")" class="btn btn-dark">Novo Aluno</a>
<br />
<br />

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Alunos", new { id = item.Id })" class="btn btn-warning text-light">Editar</a>
                <a href="@Url.Action("Details", "Alunos", new { id = item.Id })" class="btn btn-primary">Detalhes</a>
                <a href="@Url.Action("Delete", "Alunos", new { id = item.Id })" class="btn btn-danger">Excluir</a>
            </td>
        </tr>
    }

</table>
